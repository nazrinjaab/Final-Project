    <span class="hk-heart-decoration hk-heart-1">&#9829;</span>
    <span class="hk-heart-decoration hk-heart-2">&#9829;</span>
    <span class="hk-heart-decoration hk-heart-3">&#9829;</span>
    <span class="hk-heart-decoration hk-heart-4">&#9829;</span>

    <div class="hk-container">
        <div class="hk-kitty-decoration">
            <div class="hk-kitty-face">
                <div class="hk-bow">
                    <div class="hk-bow-center"></div>
                </div>
                <div class="hk-kitty-eyes">
                    <div class="hk-kitty-eye"></div>
                    <div class="hk-kitty-eye"></div>
                </div>
                <div class="hk-kitty-nose"></div>
                <div class="hk-kitty-whiskers">
                    <div class="hk-whisker hk-whisker-left-1"></div>
                    <div class="hk-whisker hk-whisker-left-2"></div>
                    <div class="hk-whisker hk-whisker-left-3"></div>
                    <div class="hk-whisker hk-whisker-right-1"></div>
                    <div class="hk-whisker hk-whisker-right-2"></div>
                    <div class="hk-whisker hk-whisker-right-3"></div>
                </div>
            </div>
        </div>

